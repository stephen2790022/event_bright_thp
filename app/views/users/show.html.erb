	

<div class="jumbotron"id="jumbotron_user_show" >
  <div class="container mt-4 text-center text-white" > 
  
  </div>
    <section>
  <div class="container">
      <div class="card text-white w-50 p-3 mx-auto m-4" id='user_trans'>
        <h1 class='text-center text-white display-4'>PROFIL</h1><br><br>
        <%if @user.avatar.attached?%>
          <%= image_tag @user.avatar, alt: 'avatar', style: "max-width: 150px ;" %>
        <%else%>
          <p>=== N'hésite pas à éditer ton évènement avec une photo ===</p>
        <%end%>
        <div class="card-header "><h2 class='text-white'>Nom : <%= @user.first_name %></h2></div> 
          <div class="card-body text-white ">
            <h3 class="card-text text-white">
              Prenom : <%= @user.last_name %><br><br>
              Description : <%= @user.description %> <br><br>
              Email : <%= @user.email %><br><br>
            </h3>
            <a class="btn btn-secondary" <%= link_to 'Editer', edit_user_registration_path  %> </a>
          </div>
      </div>
   </div>   
</section>

<section>
<div class="row m-5" id='user_trans'>			
	<% @user.events.each do |event| %>
		<div class="card bg-dark text-white h-75  m-5 p-3  mx-auto" style="width: 30rem;">
			<div class="card-body">
				<h1 class="card-title  text-center">
						Event n° <%= event.id %>
				</h1>
				<p class="card-title ">
					<ul class="list-group list-group-flush text-primary ">
						<li class="list-group-item">Titre: <%= event.title %></li>
					</ul>
				</p>
			</div>
			<ul class="list-group list-group-flush text-primary ">
				<a class="btn btn-primary p-3 m-2" <%= link_to "Voir l' événement", event_path(event) %></a>
			</ul>
			</div>
	<% end %>
</div>
<h3>Changer d'avatar ?</h3>
<%= form_tag user_avatars_path(@user), multipart: true do %>
  <%= file_field_tag :avatar %>
  <%= submit_tag "mettre à jour" %>
<% end %>
</section>
    
</div>